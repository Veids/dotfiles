{
	"snippets.userSnippetsDirectory": "~/.dotfiles/vim/snippets",
	"coc.preferences.formatOnSaveFiletypes": ["python"],
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "objc", "objcpp"],
			"rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	}
}
